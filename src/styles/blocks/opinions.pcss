.opinions__list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.opinions__item {
  width: 20%;
  margin-right: 2%;
  margin-bottom: 40px;
}

.opinions__item-text {
  text-align: justify;
  font-size: 15px;
  margin-bottom: 20px;
}

.opinions__item-link {
  text-decoration: none;
}

.opinions__item-name {
  font-size: 16px;
  font-weight: 600;
  color: #ff8562;
}