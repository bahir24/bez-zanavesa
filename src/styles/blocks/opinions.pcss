.opinions__list {
  height: 75vh;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  @include phones {
    height: unset;    
  }
}

.opinions__item {
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  width: 25%;
  height: 50%;
  max-height: 500px;
  transition: max-height 5s;
  padding: 1.5%;

  &:hover {
    max-height: 900px;
    height: unset;
  }
 
  @include tablets {
    width: 50%;
    height: 25%;
  }

  @include phones {
    width: 96%;
    height: 20vh;
  }
}

.opinions__item-text {
  overflow: hidden;
  line-height: 20px;
  text-align: justify;
  font-size: 15px;
  margin-bottom: 20px;
}

.opinions__item-link {
  text-decoration: none;
}

.opinions__item-name {
  font-size: 16px;
  font-weight: 600;
  color: #ff8562;
}