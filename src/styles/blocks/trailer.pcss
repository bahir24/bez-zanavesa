.trailer {
  display: flex;
  @include tablets {
    flex-direction: column;
  }
}



.trailer__description,
.trailer__video {
  width: 50%;
  padding: 2%;
  @include tablets {
    width: 100%;
  }
}

.trailer__description-head {
  font-size: 20px;
  font-weight: 600;
  color: #000;
  margin-bottom: 20px;
}

.trailer-description-text {
  text-align: justify;
  font-size: 20px;
  line-height: 1.55;
}

.trailer__video-clip {
  width: 100%;
  height: 45vh;
}