.photos {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  flex-direction: row;
}

.photos__item {
  overflow: hidden;
  width: 32%;
  height: 400px;
  margin-bottom: 2%;

  @include tablets {
    width: 49%;
  }

  @include phones {
    width: 98%;
  }
}

.photos__item-link {
  position: relative;
  display: inline-flex;
  height: 100%;
  width: 100%;
}

.photos__item-pic {
  // display: block;
  object-fit: cover;
  width: 100%;
  // height: 100%;
}