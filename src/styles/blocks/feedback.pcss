.feedback {
  height: 100vh;
  padding: 40px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.feedback__description {
  text-align: center;
  color: #000;
  font-size: 24px;
  line-height: 1.5;
  margin-bottom: 50px;
  @include phones {
    font-size: 16px;
    margin-bottom: 10px;
  }
}
