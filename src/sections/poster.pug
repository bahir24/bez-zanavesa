                    },{
                        date: '24 ноября, воскресенье 14:00',
                        name: '"Игра в прятки"',
                        age: '4+',
                        place: 'Детский Интеграционный Театр "Куклы"',
                        adress: 'ул. Жака Дюкло, д. 6, корп. 1',                        
                        call: true,
                        number: '79119254863',
                        about: 'https://vk.com/topic-22116444_32329889',
                        pic: 'pryatki'
                    }                    
                  ]
                each event in events                    
                  li.perfomances__item
                    if event.pic != ''
                      .poster__avatar
                        +image(`poster/${event.pic}.jpg`, 'poster__avatar-image')
                    .perfomances__date
                      date.perfomances__date-num #{event.date}
                      p.perfomances__date-dateadv #{event.dateadv}
                    h2.perfomances__name #{event.name}
                    .perfomances__other
                      p.perfomances__other-age #{event.age} лет
                      p.perfomances__other-place #{event.place}
                      p.perfomances__other-adress #{event.adress}
                    .perfomances__button
                      if event.number
                        a(
                          href=`tel: + ${event.number}`                          
                        ).btn.btn--width Купить билет                           
                      else
                        a(
                          href=`${event.buy}`
                          target="_blank"
                        ).btn.btn--width Купить билет
                      a(
                      href=`${event.about}`
                      target="_blank"
                      ).btn.btn--width Подробнее