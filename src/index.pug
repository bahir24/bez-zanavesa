include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Bez-Zanavesa | main page
  body
    .wrapper
      .maincontent
        section.hero
          header.header            
            .container.container-header
              .logo
                +image('logo/logo.png', logo-pic)
              nav.nav
                ul.nav__list
                  - 
                    var items= [ 
                      {
                          name: 'о театре',
                          link: 'https://first'
                      },{
                          name: 'афиша',
                          link: 'https://second'
                      },{
                          name: 'репертуар',
                          link: 'https://third'
                      },{
                          name: 'труппа театра',
                          link: 'https://forth'
                      },{
                          name: 'отзывы',
                          link: 'https://fifth'
                      },{
                          name: 'контакты',
                          link: 'https://sixth'
                      },{
                          name: 'заказать звонок',
                          link: 'https://seven'
                      }
                    ]
                  each item in items                       
                    li.nav__item
                      a(href=`${item.link}`).nav__link #{item.name}
              .socials
                ul.socials__list
                  - 
                    var socials= [ 
                      {
                          name: 'fb',
                          link: 'https://www.facebook.com/bezzanavesa/?rc=p'
                      },{
                          name: 'vk',
                          link: 'https://vk.com/bezzanavesa?w=page-22116444_54117202'
                      },{
                          name: 'youtube',
                          link: 'https://www.youtube.com/channel/UC_8d8MYU-WXwnmb0Rs_qPig'
                      },{
                          name: 'insta',
                          link: 'https://www.instagram.com/bezzanavesa/'
                      }
                    ]
                  each social in socials                    
                    li.socials__item
                      a(href=`${social.link}`).socials__link 
                        +icon(`${social.name}`, 'socials__icon')
          .container.slider-container
            .slider
              .slider-images                
                ul.slider-images__list
                  - for (var i = 1; i < 4; i++)                    
                    li.slider-images__item
                      +image(`slider/${i}.jpg`, 'slider-images__image')
              ul.slider-buttons
                - 
                  var btns= ['left', 'right']
                each btn in btns                  
                  li.slider-buttons__button(class=`slider-buttons__button-${btn}`)
                    a.slider-buttons__arrow
              ul.slider-points
                - for (var i = 0; i < 3; i++)
                  li.slider-points__point
                    a.slider-points__point-btn
        section.poster
          .container
            h2.section-head Лето 2019
            .perfomances
              ul.perfomances__list
                - 
                  var events= [ 
                    {
                        date: '29 июня, 19:00 (суббота)',
                        name: '"Крошечка-Хаврошечка", 5+ (спектакль на Международном фестивале КУКART)',
                        description: 'Нашему театру выпала честь выступить на крупнейшем фестивале кукольных театров "КУКART".Мы будем играть, пожалуй, самый лиричный, эмоционально насыщенныйспектакль из нашего репертуара, и самый необычный, потому что это спектакльбез слов - "Крошечку - Хаврошечку". Вариации на тему известного сюжета, переплетение классической и фольклорной музыки, завораживающая игра артистов, интересные режиссерские задумки. Он понятен детям и удивляет взрослых.',
                        buy: 'Билеты: https://teatr-bez-zanavesa.timepad.ru/event/982976/',
                        about: 'Подробнее о спектакле: https://vk.com/topic-22116444_38415410'
                    }
                  ]
                each event in events                    
                  li.perfomances__item 
                    date.perfomances__item-date #{event.date}
                    h2.perfomances__item-name #{event.name}                 
                    p.perfomances__item-description #{event.description}
                    p.perfomances__item-buy #{event.buy}
                    p.perfomances__item-about  #{event.about}
        section.repertoire         
          .container
            h2.section-head Репертуар театра
            .plays
              ul.plays-list
                - 
                  var plays= [ 
                    {
                        name: '"Биба. Про Сашу Блока". (6+)',
                        description: 'Это трогательная история об одном дне из детства поэта Александра Блока. Маленький Саша на весь день оставлен с няней. Он ссорится и мирится с ней, играет и сочиняет первые стихи, и очень ждет маму. Мы видим как оживают его фантазии, а еще к нему в гости приходит Пьеро и начинаются настоящие чудеса...'
                    },{
                        name: '"Игра в прятки" (4+)',
                        description: 'Кукольный спектакль "Игра в прятки"- это музыкальное представление с веселыми песенками по мотивам сказок английского писателя Дональда Биссета "Муравей и сахар", "Под ковром", "Игра в прятки" и других. Девочка Шейла не любит скучать, она придумывает себе сказочных друзей и начинает с ними играть, а они открывают ей волшебную страну, полную выдумок и чудес.'
                    },{
                        name: '"Сказки Шаляпина" (6+)',
                        description: 'Необычный спектакль, основанный на биографических материалах, сказках и историях, которые Шаляпин сочинял своим детям. Ирина, Лидочка, Борис, Федька и Танечка ждут папу, а он уехал далеко на гастроли. У детей возникают вопросы: что такое театр и почему папа поёт? Любимец Федора Ивановича, пёсик Булька, вместе с гувернанткой и няней рассказывает детям, как папа был маленьким, за что он полюбил театр и приглашают поиграть в театр прямо дома - ведь папину сказку интересно не просто слушать, но и смотреть.'
                    },{
                        name: '"Крошечка - Хаврошечка" (5+)',
                        description: 'Кукольный спектакль по мотивам русской народной сказки, в котором классическая старинная музыка соединяется с народной, а традиционные тряпичные куклы с профессиональными. На старом колесе от прялки, совершенно без слов, артисты разыгрывают историю маленькой сироты и вместе с ангелом-хранителем ведут ее к счастливому финалу.'                  
                    },{
                        name: '"Рождественское чудо" (5+)',
                        description: 'Спектакль поставлен по одноименному рассказу Ольги Першиной и совмещает старое вертепное действие и современную историю. - В самый сочельник Машенька заболела. Она капризничает и не слушается - ведь праздник все равно будет испорчен, ей придется весь день лежать в постели. Но ночью она совершает удивительное путешествие в Вифлеем и просыпается здоровой.'
                    },{
                        name: '"Прогулка со старым трамваем" (12+)',
                        description: 'История о первой девичьей любви, которая переживается на фоне общих демонстраций, производственной гимнастики и построении светлого будущего. Это спектакль-настроение, переносящий зрителя в ностальгический мир советских 60-х. Один из критиков назвал «Прогулку со старым трамваем» историей «о мужской не-мужественности и девичьей наивности, сделанной куклами, которые как никто отличались человечностью, переживали, страдали и разводили руками, когда не могли принять решение…»'                   
                    }
                  ]
                each play in plays                    
                  li.plays__item
                    .plays__item-image
                      +image(`plays/${play.name}.jpg`, 'plays__item-pic')
                    .plays__item-description
                      h2.plays__item-name #{play.name}                 
                      p.plays__item-text #{play.description}
                      button.order Заказать звонок
        section.video
          .container
            h2.section-head Видео со спектаклей
            .event-video
              ul.event-video__list
                - 
                  var events= [ 
                    {
                        name: '"Крошечка-Хаврошечка" (5+)',
                        description: '- это кукольный спектакль по мотивам русской народной сказки, в котором классическая старинная музыка соединяется с народной, а традиционные тряпичные куклы с профессиональными. На старом колесе от прялки, совершенно без слов, артисты разыгрывают историю маленькой сироты и вместе с ангелом-хранителем ведут ее к счастливому финалу.',
                        link: 'https://www.youtube.com/embed/b80qYS11iZ4',
                    },{
                        name: '"Игра в прятки" (4+)',
                        description: '- Кукольный спектакль "Игра в прятки"- это музыкальное представление с веселыми песенками по мотивам сказок английского писателя Дональда Биссета "Муравей и сахар", "Под ковром", "Игра в прятки" и других. Девочка Шейла не любит скучать, она придумывает себе сказочных друзей и начинает с ними играть, а они открывают ей волшебную страну, полную выдумок и чудес.',
                        link: 'https://www.youtube.com/embed/b80qYS11iZ4',
                    },{
                        name: '"Сказки Шаляпина" (6+) ',
                        description: '- это необычный спектакль, основанный на биографических материалах, сказках и историях, которые Шаляпин сочинял своим детям. Ирина, Лидочка, Борис, Федька и Танечка ждут папу, а он уехал далеко на гастроли. У детей возникают вопросы: что такое театр и почему папа поёт? Любимец Федора Ивановича, пёсик Булька, вместе с гувернанткой и няней рассказывает детям, как папа был маленьким, за что он полюбил театр и приглашают поиграть в театр прямо дома - ведь папину сказку интересно не просто слушать, но и смотреть.',
                        link: 'https://www.youtube.com/embed/6TwKK1gRiX4',
                    }
                  ]
                each event in events                    
                  li.event-video__item                    
                    .trailer
                      .trailer__description
                        h3.trailer__description-head #{event.name}
                        p.trailer-description-text #{event.description}
                      .trailer__video
                        iframe(class="trailer__video-clip" src=`${event.link}` frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
        section.feedback      
          .container.container__feedback
            h2.section-head.section-head--feedback Форма обратной связи*
            p.feedback__description 
              |Заполните форму ниже, и выберете желаемую услугу. 
              br
              |Мы ответим Вам в ближайшее время!
            .feedback__form
              form.form
                ul.form__rows
                  - 
                    var rows= [ 
                      {
                          name: 'E-mail',
                          type: 'input',
                          placeholder: 'Ваш E-mail'                        
                      },{
                          name: 'Имя',
                          type: 'input',
                          placeholder: 'Имя'                        
                      },{
                          name: 'Телефон',
                          type: 'input',
                          placeholder: 'Номер телефона'                        
                      },{
                          name: 'Вы бы хотели...',
                          type: 'select',
                          placeholder: 'Выберете желаемую услугу',                          
                      }
                    ]
                  each row in rows                   
                    li.form__row
                      label.form__row-label
                        h4.form__row-head #{row.name}
                        #{row.type}(placeholder=`${row.placeholder}`).form__row-input
                          
                            - 
                              var options= [
                                { 
                                  name: 'Купить билет на текущие спектакли'
                                },{
                                  name: 'Заказать спектакль'
                                },{
                                  name: 'Пригласить на гастроли'
                                },{
                                  name: 'Подписаться на рассылку новостей и получить подарок'
                                }
                              ]                              
                            each option in options
                              if row.type == 'select'                            
                                option.form__option #{option.name}                          
        section.about
                    
